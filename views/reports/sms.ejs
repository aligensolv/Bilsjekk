<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>P-Automater</title>

    <%- include('../components/headers') %>


  <!-- DataTables -->
  <link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
  <link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
  <link rel="stylesheet" href="/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
</head>
<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        <%- include('../components/navbar') %>
        
    <% if(isAdmin){ %>
            <%- include('../components/sidebar') %> 
        <% } else{%>
            <%- include('../components/manager_sidebar', { permissions }) %> 
        <% } %>  

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="/">Hjem</a></li>
                    <li class="breadcrumb-item active"><a href="/reports/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">SMS</li>
                    </ol>
                </div><!-- /.col -->
                </div><!-- /.row -->

            </div><!-- /.container-fluid -->
            </div>

            <div class="content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                              <h3 class="card-title d-flex justify-content-between align-items-center">
                                SMS Data
                              </h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                              <table id="example1" class="table table-bordered table-striped text-center">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Recievers</th>
                                        <th>Total</th>
                                        <th>About</th>
                                        <th>Content</th>
                                        <th>Sender</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    
                                        <% if (smss.length === 0) { %>
                                            <tr>
                                                <td colspan="6">No SMS yet</td>
                                            </tr>
                                        <% } else { %>
                                            <% smss.forEach(sms => { %>
                                                <tr>
                                                    <td><%= sms.delivery_date %></td>
                                                    <td><%= sms.delivered_to.join(', ') %></td>
                                                    <td><%= sms.total_received %></td>
                                                    <td><%= sms.about %></td>
                                                    <td><%= sms.content %></td>
                                                    <td><%= sms.sender %></td>
                                                
                                                </tr>
                        
                                            <% }); %>
                                        <% } %>
                                        </tbody>
                              </table>
                            </div>
                            <!-- /.card-body -->
                          </div>
                    </div>
                </div>
            </div>
    </div>
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <div class="p-4">
        <i class="fa fa-arrow-left" data-widget="control-sidebar" data-slide="true" href="#" role="button"></i>
    </div>

    <div id="control-content">

    </div>
</aside>
        <%- include('../components/footer') %>
    </div>


<%- include('../components/scripts') %>

