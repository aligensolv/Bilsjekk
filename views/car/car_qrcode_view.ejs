<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../components/headers.ejs') %>
</head>
<body>
    <div class="wrapper">
        <%- include('../components/navbar') %>
        <% if(isAdmin){ %>
            <%- include('../components/sidebar') %> 
        <% } else{%>
            <%- include('../components/manager_sidebar', { permissions }) %> 
        <% } %>  

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="/">Hjem</a></li>
                    <li class="breadcrumb-item"><a href="/cars">Biler</a></li>
                    <li class="breadcrumb-item"><a href="#"><%= car.boardNumber %></a></li>
                    <li class="breadcrumb-item active">QR-Kode</li>
                    </ol>
                </div><!-- /.col -->
                </div><!-- /.row -->

            </div><!-- /.container-fluid -->
            </div>

            <div class="content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                              <h3 class="card-title d-flex justify-content-between align-items-center">
                                QR-kode
                              </h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">

                                <div class="container-fluid">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                    
                                    </div>
                                    <div class="row justify-content-center">
                                        <div class="col-md-6 text-center d-flex flex-column align-items-stretch">
                                            <% if(car.qrcode != null){ %>
                                                <img src="<%= car.qrcode %>"  width="300" height="300" alt="QR Code" class="img-fluid align-self-center">
                                            <% }else{ %>
                                                <img src="/images/image-broken-holder.png"  width="300" height="300" alt="QR Code" class="img-fluid align-self-center">
                                            <% } %>
                                            <div class="btn-group">
                                                <a href="/cars/<%= car._id %>/update" class="btn btn-primary">Oppdatere</a>
                                                <a href="<%= car.qrcode %>" class="btn btn-info" download>Nedlasting</a>
                                                <a href="/cars" class="btn btn-secondary">Avbrytt</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                          </div>
                    </div>
                </div>
            </div>
    </div>

        <%- include('../components/footer') %>
    </div>
<%- include('../components/scripts.ejs') %>
</body>
</html>
